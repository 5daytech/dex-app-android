<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MainToolbar">
        <attr name="mt_title" format="string"/>
    </declare-styleable>

    <declare-styleable name="InfoItemView">
        <attr name="iiv_title" format="reference|string"/>
        <attr name="iiv_visible_divider" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="EmptyItemsView">
        <attr name="eiv_message" format="reference|string"/>
    </declare-styleable>

    <declare-styleable name="SettingsItemView">
        <attr name="siv_title" format="reference|string"/>
        <attr name="siv_icon" format="reference"/>
        <attr name="siv_tint" format="color|reference"/>
        <attr name="siv_action_switch" format="boolean" />
        <attr name="siv_divider_visible" format="boolean"/>
        <attr name="siv_tint_enabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BaseDropDownView">
        <attr name="ddv_item_layout" format="reference|integer"/>
    </declare-styleable>

    <declare-styleable name="OptionSelectorView">
        <attr name="osv_options" format="string"/>
        <attr name="selectedNumBackground" format="integer"/>
        <attr name="defaultNumBackground" format="integer"/>
        <attr name="selectedTextColor" format="reference|integer"/>
        <attr name="defaultTextColor" format="reference|integer"/>
    </declare-styleable>
</resources>
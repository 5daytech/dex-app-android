<resources>

    <attr name="PrimaryLightColor" format="reference|color"/>
    <attr name="PrimaryTextColor" format="reference|color"/>
    <attr name="AccentTextColor" format="reference|color"/>
    <attr name="TransparentAccentTextColor" format="reference|color"/>
    <attr name="HintTextColor" format="reference|color"/>
    <attr name="PrimaryButtonColor" format="reference|color"/>
    <attr name="PrimaryButtonTextColor" format="reference|color"/>
    <attr name="PrimaryButtonTransparentTextColor" format="reference|color"/>
    <attr name="PrimaryButtonTransparentColor" format="reference|color"/>
    <attr name="SecondaryHintTextColor" format="reference|color"/>
    <attr name="ActionButtonBackground" format="reference|color"/>
    <attr name="SmallActionButtonColor" format="reference|color"/>
    <attr name="MainBackground" format="reference|color"/>
    <attr name="MainDarkBackground" format="reference|color"/>
    <attr name="SelectableRippleColor" format="reference|color"/>
    <attr name="AccentBackground" format="reference|color"/>
    <attr name="DividerColor" format="reference|color"/>
    <attr name="OddOrderBackground" format="reference|color"/>
    <attr name="EvenOrderBackground" format="reference|color"/>
    <attr name="EmptyCircleColor" format="reference|color"/>
    <attr name="AttentionColor" format="reference|color"/>
    <attr name="NavigationColor" format="reference|color"/>
    <attr name="TransparentBackground" format="reference|color"/>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:navigationBarColor">@color/dark_main</item>
        <item name="NavigationColor">@color/dark_main</item>
    </style>

    <style name="AppTheme.LightMode">
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/light_main</item>
        <item name="android:windowBackground">@color/light_main</item>
        <item name="MainBackground">@color/light_main</item>
        <item name="PrimaryTextColor">@color/main_dark_text</item>
        <item name="PrimaryLightColor">@color/dark_text</item>
        <item name="HintTextColor">@color/dark_hint</item>
        <item name="SecondaryHintTextColor">@color/dark_secondary_hint</item>
        <item name="ActionButtonBackground">@color/light_main</item>
        <item name="MainDarkBackground">@color/light_main_dark</item>
        <item name="SmallActionButtonColor">@color/light_action_button</item>
        <item name="AccentBackground">@color/light_accent</item>
        <item name="DividerColor">@color/light_divider</item>
        <item name="OddOrderBackground">@color/light_accent</item>
        <item name="EvenOrderBackground">@color/light_main</item>
        <item name="EmptyCircleColor">@color/light_empty_circle</item>
        <item name="AttentionColor">@color/orange</item>
        <item name="PrimaryButtonColor">@color/blue</item>
        <item name="PrimaryButtonTextColor">@color/white</item>
        <item name="PrimaryButtonTransparentTextColor">@color/transparent_white</item>
        <item name="PrimaryButtonTransparentColor">@color/transparent_blue</item>
        <item name="AccentTextColor">@color/blue</item>
        <item name="TransparentAccentTextColor">@color/transparent_blue_20</item>
        <item name="TransparentBackground">@color/light_accent_transparent</item>
    </style>

    <style name="AppTheme.DarkMode">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/dark_main</item>
        <item name="android:windowBackground">@color/dark_main</item>
        <item name="selectableItemBackground">@drawable/bg_selectable_item</item>
        <item name="selectableItemBackgroundBorderless">@drawable/bg_selectable_item_borderless</item>
        <item name="SelectableRippleColor">@drawable/bg_selectable_item</item>
        <item name="PrimaryTextColor">@color/main_light_text</item>
        <item name="PrimaryLightColor">@color/white</item>
        <item name="HintTextColor">@color/light_hint</item>
        <item name="SecondaryHintTextColor">@color/light_secondary_hint</item>
        <item name="ActionButtonBackground">@color/dark_main</item>
        <item name="MainBackground">@color/dark_main</item>
        <item name="MainDarkBackground">@color/dark_main_dark</item>
        <item name="SmallActionButtonColor">@color/action_button_dark</item>
        <item name="AccentBackground">@color/dark_accent</item>
        <item name="DividerColor">@color/dark_divider</item>
        <item name="OddOrderBackground">@color/dark_accent</item>
        <item name="EvenOrderBackground">@color/dark_main</item>
        <item name="EmptyCircleColor">@color/dark_empty_circle</item>
        <item name="AttentionColor">@color/bright_yellow</item>
        <item name="PrimaryButtonColor">@color/violet</item>
        <item name="PrimaryButtonTextColor">@color/white</item>
        <item name="PrimaryButtonTransparentTextColor">@color/transparent_white</item>
        <item name="PrimaryButtonTransparentColor">@color/transparent_violet</item>
        <item name="AccentTextColor">@color/turquoise</item>
        <item name="TransparentAccentTextColor">@color/transparent_turquoise_20</item>
        <item name="TransparentBackground">@color/dark_accent_transparent</item>
    </style>

    <style name="AppTheme.GoldMode">
        <item name="colorAccent">@color/yellow</item>
        <item name="colorPrimary">@color/yellow</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="NavigationColor">@color/black</item>
        <item name="selectableItemBackground">@drawable/bg_selectable_item</item>
        <item name="selectableItemBackgroundBorderless">@drawable/bg_selectable_item_borderless</item>
        <item name="SelectableRippleColor">@drawable/bg_selectable_item</item>
        <item name="PrimaryTextColor">@color/white</item>
        <item name="PrimaryLightColor">@color/white</item>
        <item name="HintTextColor">@color/gold_hint</item>
        <item name="SecondaryHintTextColor">@color/gold_secondary_hint</item>
        <item name="ActionButtonBackground">@color/black</item>
        <item name="MainBackground">@color/black</item>
        <item name="MainDarkBackground">@color/black</item>
        <item name="SmallActionButtonColor">@color/gold_main</item>
        <item name="AccentBackground">@color/gold_accent</item>
        <item name="DividerColor">@color/gold_divider</item>
        <item name="OddOrderBackground">@color/gold_accent</item>
        <item name="EvenOrderBackground">@color/black</item>
        <item name="EmptyCircleColor">@color/gold_accent</item>
        <item name="AttentionColor">@color/red</item>
        <item name="PrimaryButtonColor">@color/yellow</item>
        <item name="PrimaryButtonTextColor">@color/black</item>
        <item name="PrimaryButtonTransparentTextColor">@color/black</item>
        <item name="PrimaryButtonTransparentColor">@color/transparent_yellow</item>
        <item name="AccentTextColor">@color/yellow</item>
        <item name="TransparentAccentTextColor">@color/transparent_yellow_20</item>
        <item name="TransparentBackground">@color/gold_accent_transparent</item>
    </style>

    <style name="AppTheme.DarkLaunchScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@drawable/bg_launch_screen</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Screens -->
    <style name="AppTheme.FullScreen">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="Divider">
        <item name="android:background">?attr/DividerColor</item>
    </style>

    <style name="SwitchStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="colorSwitchThumbNormal">@color/light_grey</item>
        <item name="android:colorForeground">@color/light_grey</item>
    </style>

    <!-- Dialogs -->

    <style name="BaseBottomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?AccentTextColor</item>
        <item name="android:navigationBarColor">?NavigationColor</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimations</item>
    </style>

    <style name="BaseFloatingDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?AccentTextColor</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowAnimationStyle">@style/FloatingDialogAnimations</item>
    </style>

    <style name="DarkBottomSheet" parent="BaseBottomDialog">
        <item name="selectableItemBackground">@drawable/bg_selectable_item</item>
        <item name="selectableItemBackgroundBorderless">@drawable/bg_selectable_item_borderless</item>
    </style>

    <style name="GoldBottomSheet" parent="BaseBottomDialog">
        <item name="selectableItemBackground">@drawable/bg_selectable_item</item>
        <item name="selectableItemBackgroundBorderless">@drawable/bg_selectable_item_borderless</item>
    </style>

    <style name="DarkFloatingDialog" parent="BaseFloatingDialog">
        <item name="selectableItemBackground">@drawable/bg_selectable_item</item>
        <item name="selectableItemBackgroundBorderless">@drawable/bg_selectable_item_borderless</item>
    </style>

    <style name="GoldFloatingDialog" parent="BaseFloatingDialog">
        <item name="selectableItemBackground">@drawable/bg_selectable_item</item>
        <item name="selectableItemBackgroundBorderless">@drawable/bg_selectable_item_borderless</item>
    </style>

    <style name="LightBottomSheet" parent="BaseBottomDialog" />

    <style name="LightFloatingDialog" parent="BaseFloatingDialog" />

    <style name="BottomDialogAnimations" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="FloatingDialogAnimations" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/appear_in</item>
        <item name="android:windowExitAnimation">@anim/appear_out</item>
    </style>

    <!-- Buttons -->
    <style name="PrimaryButton" parent="BoldText">
        <item name="android:background">@drawable/bg_primary_action</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textColor">@drawable/selector_primary_action_text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="PrimaryButtonRounded" parent="BoldText">
        <item name="android:background">@drawable/bg_primary_action_corner_4dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textColor">@drawable/selector_primary_action_text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="GreenRoundedButton" parent="PrimaryButtonRounded">
        <item name="android:background">@drawable/bg_green_action_corner_4dp</item>
    </style>

    <style name="ButtonSmallGrey" parent="BoldText">
        <item name="android:background">@drawable/bg_grey</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">12.5sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Inputs -->
    <style name="PrimaryNumberInput" parent="BoldText">
        <item name="android:textSize">19sp</item>
        <item name="android:inputType">number|numberDecimal</item>
        <item name="android:maxLines">1</item>
        <item name="android:hint">0.0</item>
        <item name="android:textColor">?PrimaryTextColor</item>
        <item name="android:textColorHint">?HintTextColor</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Texts -->
    <style name="MainTitleText" parent="BoldText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
    </style>

    <style name="DialogTitleText" parent="BoldText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
    </style>

    <style name="SmallHintText" parent="RegularText">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/SecondaryHintTextColor</item>
    </style>

    <style name="BoldHintText" parent="BoldText">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/SecondaryHintTextColor</item>
    </style>

    <style name="HintText" parent="RegularText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/HintTextColor</item>
    </style>

    <style name="SecondaryHintText" parent="RegularText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/SecondaryHintTextColor</item>
    </style>

    <style name="SettingsText" parent="SemiboldText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
    </style>

    <style name="AmountText" parent="BoldText">
        <item name="android:textSize">19sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:hint">0.0</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
        <item name="android:textColorHint">?attr/PrimaryTextColor</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Base styles -->
    <style name="BaseText">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BoldText" parent="BaseText">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>

    <style name="RegularText" parent="BaseText">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="SemiboldText" parent="BaseText">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="LightText" parent="BaseText">
        <item name="android:fontFamily">@font/sf_pro_display_light</item>
    </style>

</resources>

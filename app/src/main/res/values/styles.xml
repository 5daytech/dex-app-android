<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/light_bg</item>
        <item name="android:windowBackground">@color/light_bg</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="BottomSheet" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimations</item>
    </style>

    <style name="BottomDialogAnimations" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!-- Buttons -->
    <style name="PrimaryButton" parent="RegularText">
        <item name="android:background">@drawable/bg_primary_blue</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ButtonSmallGrey" parent="RegularText">
        <item name="android:background">@drawable/bg_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <!-- Texts -->
    <style name="MainTitle" parent="BoldText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/main_dark</item>
    </style>

    <style name="SmallHint" parent="LightText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_hint</item>
    </style>

    <!-- Base styles -->
    <style name="AppTheme.BaseText">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BoldText" parent="AppTheme.BaseText">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="RegularText" parent="AppTheme.BaseText">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SemiboldText" parent="AppTheme.BaseText">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="LightText" parent="AppTheme.BaseText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>

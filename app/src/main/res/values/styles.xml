<resources>

    <attr name="PrimaryLightColor" format="reference|color"/>
    <attr name="PrimaryTextColor" format="reference|color"/>
    <attr name="HintTextColor" format="reference|color"/>
    <attr name="ActionButtonBackground" format="reference|color"/>
    <attr name="SmallActionButtonColor" format="reference|color"/>
    <attr name="MainBackground" format="reference|color"/>
    <attr name="SelectableRippleColor" format="reference|color"/>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/main_dark</item>
        <item name="android:windowBackground">@color/main_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>

        <item name="selectableItemBackground">@drawable/bg_light_selectable</item>
        <item name="SelectableRippleColor">@drawable/bg_light_selectable</item>
        <item name="PrimaryTextColor">@color/main_light_text</item>
        <item name="PrimaryLightColor">@color/white</item>
        <item name="HintTextColor">@color/light_hint</item>
        <item name="ActionButtonBackground">@color/main_dark</item>
        <item name="MainBackground">@color/main_dark</item>
        <item name="SmallActionButtonColor">@color/action_button_dark</item>
    </style>

    <!-- Screens -->
    <style name="AppTheme.BarcodeScanner">
        <item name="android:statusBarColor">@color/main_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Divider">
        <item name="android:background">?attr/HintTextColor</item>
        <item name="android:alpha">0.5</item>
    </style>

    <!-- Dialogs -->
    <style name="BottomSheet" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimations</item>
    </style>

    <style name="FloatingDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
    </style>

    <style name="BottomDialogAnimations" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!-- Buttons -->
    <style name="PrimaryButton" parent="SemiboldText">
        <item name="android:background">@drawable/bg_primary_blue</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="PrimaryButtonRounded" parent="SemiboldText">
        <item name="android:background">@drawable/bg_primary_blue_corner_4dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ButtonSmallGrey" parent="BoldText">
        <item name="android:background">@drawable/bg_grey</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">12.5sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Inputs -->
    <style name="PrimaryNumberInput" parent="BoldText">
        <item name="android:colorAccent">?attr/PrimaryTextColor</item>
        <item name="android:textSize">19sp</item>
        <item name="android:inputType">number|numberDecimal</item>
        <item name="android:maxLines">1</item>
        <item name="android:hint">0.0</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
        <item name="android:textColorHint">?attr/PrimaryTextColor</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Texts -->
    <style name="MainTitleText" parent="BoldText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
    </style>

    <style name="DialogTitleText" parent="BoldText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
    </style>

    <style name="SmallHintText" parent="RegularText">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/HintTextColor</item>
    </style>

    <style name="HintText" parent="RegularText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/HintTextColor</item>
    </style>

    <style name="SettingsText" parent="RegularText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
    </style>

    <style name="AmountText" parent="BoldText">
        <item name="android:textSize">19sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:hint">0.0</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
        <item name="android:textColorHint">?attr/PrimaryTextColor</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Base styles -->
    <style name="AppTheme.BaseText">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BoldText" parent="AppTheme.BaseText">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>

    <style name="RegularText" parent="AppTheme.BaseText">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="SemiboldText" parent="AppTheme.BaseText">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="LightText" parent="AppTheme.BaseText">
        <item name="android:fontFamily">@font/sf_pro_display_light</item>
    </style>

</resources>

<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainTitle" parent="AppTheme.BoldText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PrimaryButton" parent="AppTheme.RegularText">
        <item name="android:background">@drawable/bg_blue_gradient</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ButtonSmallGrey" parent="AppTheme.RegularText">
        <item name="android:background">@drawable/bg_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="SmallHint" parent="AppTheme.LightText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_hint</item>
    </style>

    <style name="AppTheme.BoldText">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="AppTheme.RegularText">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.SemiboldText">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.LightText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>

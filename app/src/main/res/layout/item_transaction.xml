<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:paddingLeft="@dimen/page_margin"
    android:paddingRight="@dimen/page_margin">

    <TextView
        style="@style/RegularText"
        android:id="@+id/transaction_date"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="?attr/HintTextColor"
        android:textSize="14sp"
        android:text="SEP\n27"/>

    <com.blocksdecoded.dex.presentation.widgets.CoinIconView
        android:id="@+id/transaction_coin_icon"
        android:layout_width="@dimen/coin_size"
        android:layout_height="@dimen/coin_size"
        app:layout_constraintLeft_toRightOf="@+id/transaction_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/element_margin"/>
    
    <TextView
        style="@style/SemiboldText"
        android:id="@+id/transaction_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/transaction_coin_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="?attr/PrimaryTextColor"
        android:textSize="16sp"
        android:layout_marginStart="@dimen/element_margin"
        android:text="Sent"/>

    <TextView
        style="@style/BoldText"
        android:id="@+id/transaction_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/transaction_fiat_amount"
        android:layout_marginTop="@dimen/page_margin"
        android:textColor="?attr/PrimaryTextColor"
        android:textSize="17sp"
        android:text="+ 0.01 ETH"/>

    <TextView
        android:id="@+id/transaction_fiat_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transaction_amount"
        android:textColor="?attr/HintTextColor"
        android:text="+ $0.00"/>

    <View
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transaction_fiat_amount"
        android:paddingTop="@dimen/page_margin"
        android:layout_marginTop="@dimen/page_margin" />

</androidx.constraintlayout.widget.ConstraintLayout>
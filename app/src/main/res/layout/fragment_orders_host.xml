<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <com.fridaytech.dex.presentation.widgets.MainToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:elevation="0dp"
        app:mt_title="@string/title_orders"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <com.fridaytech.dex.presentation.orders.ExchangePairsView
            android:id="@+id/orders_host_pair_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center_horizontal"
            android:background="?attr/AccentBackground"
            android:paddingTop="@dimen/element_margin"
            android:paddingBottom="@dimen/element_margin" />

        <TextView
            style="@style/SemiboldText"
            android:id="@+id/orders_selected_base_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/orders_host_pair_picker"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/element_margin"
            android:layout_marginStart="@dimen/page_margin"
            android:paddingTop="@dimen/medium_margin"
            android:paddingBottom="@dimen/medium_margin"
            android:textColor="?PrimaryTextColor"
            android:text="ZRX:"/>

        <TextView
            style="@style/SemiboldText"
            android:id="@+id/orders_side_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/orders_selected_base_coin"
            app:layout_constraintBottom_toBottomOf="@+id/orders_selected_base_coin"
            app:layout_constraintStart_toEndOf="@+id/orders_selected_base_coin"
            android:layout_marginStart="@dimen/medium_margin"
            android:paddingStart="@dimen/medium_margin"
            android:paddingEnd="@dimen/medium_margin"
            android:paddingTop="@dimen/element_margin"
            android:paddingBottom="@dimen/element_margin"
            android:textSize="12sp"
            android:background="@drawable/selector_option_item"
            android:textColor="@drawable/selector_option_text"
            android:enabled="false"
            android:text="BUY"/>

        <TextView
            style="@style/SemiboldText"
            android:id="@+id/orders_side_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/orders_selected_base_coin"
            app:layout_constraintBottom_toBottomOf="@+id/orders_selected_base_coin"
            app:layout_constraintStart_toEndOf="@+id/orders_side_buy"
            android:layout_marginStart="@dimen/element_margin"
            android:paddingStart="@dimen/medium_margin"
            android:paddingEnd="@dimen/medium_margin"
            android:paddingTop="@dimen/element_margin"
            android:paddingBottom="@dimen/element_margin"
            android:textSize="12sp"
            android:background="@drawable/selector_option_item"
            android:textColor="@drawable/selector_option_text"
            android:enabled="true"
            android:text="SELL"/>

        <TextView
            style="@style/SemiboldText"
            android:id="@+id/orders_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/orders_selected_base_coin"
            app:layout_constraintBottom_toBottomOf="@+id/orders_selected_base_coin"
            app:layout_constraintStart_toEndOf="@+id/orders_side_sell"
            android:paddingStart="@dimen/big_margin"
            android:paddingEnd="@dimen/big_margin"
            android:paddingTop="@dimen/element_margin"
            android:paddingBottom="@dimen/element_margin"
            android:background="@drawable/selector_option_item"
            android:textColor="@drawable/selector_option_text"
            android:enabled="true"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:text="My Orders"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/orders_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/orders_selected_base_coin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/element_margin" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

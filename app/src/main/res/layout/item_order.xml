<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:paddingTop="@dimen/page_margin"
    android:paddingBottom="@dimen/page_margin"
    android:paddingLeft="@dimen/big_margin"
    android:paddingRight="@dimen/big_margin">

    <TextView
        style="@style/RegularText"
        android:id="@+id/order_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_weight="1.0"
        android:gravity="center"
        android:textColor="?attr/PrimaryTextColor"
        android:textSize="15sp"
        android:text="100"/>

    <TextView
        style="@style/SemiboldText"
        android:id="@+id/order_amount_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/order_amount"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/small_margin"
        android:textSize="15sp"
        android:textColor="?attr/SecondaryHintTextColor"
        android:text="ZRX"/>

    <TextView
        style="@style/RegularText"
        android:id="@+id/order_amount_fiat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_amount"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/small_margin"
        android:gravity="center"
        android:textColor="?attr/HintTextColor"
        android:textSize="13sp"
        android:text="~ $10.12"/>

    <TextView
        style="@style/SecondaryHintText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="14sp"
        android:text="for"/>

    <TextView
        style="@style/RegularText"
        android:id="@+id/order_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/order_total_coin"
        android:layout_marginEnd="@dimen/small_margin"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="end"
        android:textColor="@color/green"
        android:textSize="15sp"
        android:text="1"/>

    <TextView
        style="@style/SemiboldText"
        android:id="@+id/order_total_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="?attr/SecondaryHintTextColor"
        android:textSize="15sp"
        android:text="ETH"/>

    <TextView
        style="@style/RegularText"
        android:id="@+id/order_total_fiat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_total"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:gravity="center"
        android:textColor="?attr/HintTextColor"
        android:textSize="13sp"
        android:text="~ $99.9"/>
</androidx.constraintlayout.widget.ConstraintLayout>
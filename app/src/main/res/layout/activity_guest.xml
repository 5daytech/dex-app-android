<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_main"
    android:gravity="bottom">

    <TextView
        style="@style/BoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/page_margin"
        android:layout_marginBottom="80dp"
        android:text="Decentralized\nExchange"
        android:textSize="40sp"
        android:textColor="@color/light_grey_bg"/>

    <Button
        android:id="@+id/guest_create_wallet"
        style="@style/PrimaryButtonRounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/page_margin"
        android:layout_marginEnd="@dimen/page_margin"
        android:text="Create Wallet"/>

    <Button
        android:id="@+id/guest_restore_wallet"
        style="@style/PrimaryButton"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/page_margin"
        android:layout_marginStart="@dimen/page_margin"
        android:layout_marginEnd="@dimen/page_margin"
        android:layout_marginBottom="80dp"
        android:text="Restore"/>

</LinearLayout>
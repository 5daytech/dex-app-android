<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        app:cardBackgroundColor="?attr/ActionButtonBackground"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/small_corner_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.blocksdecoded.dex.presentation.widgets.CoinIconImage
                android:id="@+id/transaction_info_coin_icon"
                android:layout_width="@dimen/coin_size"
                android:layout_height="@dimen/coin_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="@dimen/page_margin"
                android:layout_marginTop="@dimen/page_margin"/>

            <TextView
                style="@style/DialogTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/transaction_info_coin_icon"
                app:layout_constraintBottom_toBottomOf="@+id/transaction_info_coin_icon"
                app:layout_constraintLeft_toRightOf="@+id/transaction_info_coin_icon"
                android:layout_marginLeft="@dimen/page_margin"
                android:text="Transaction"/>

            <com.blocksdecoded.dex.presentation.widgets.HashView
                android:id="@+id/transaction_info_hash"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/transaction_info_coin_icon"
                app:layout_constraintBottom_toBottomOf="@+id/transaction_info_coin_icon"
                android:layout_marginEnd="@dimen/page_margin"/>

            <TextView
                style="@style/DialogTitleText"
                android:id="@+id/transaction_info_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/transaction_info_coin_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/page_margin"
                android:gravity="center"
                android:textColor="?attr/PrimaryLightColor"
                android:text="+ 0,001 ETH"/>

            <TextView
                style="@style/HintText"
                android:id="@+id/transaction_info_fiat_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/transaction_info_amount"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                android:text="$3.0"/>

            <TextView
                style="@style/HintText"
                android:id="@+id/transaction_info_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transaction_info_fiat_amount"
                android:layout_marginTop="@dimen/element_margin"
                android:paddingStart="@dimen/page_margin"
                android:paddingEnd="@dimen/page_margin"
                android:paddingTop="@dimen/element_margin"
                android:paddingBottom="@dimen/element_margin"
                android:text="Rate"/>

            <TextView
                style="@style/HintText"
                android:id="@+id/transaction_info_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transaction_info_rate"
                android:paddingStart="@dimen/page_margin"
                android:paddingEnd="@dimen/page_margin"
                android:paddingTop="@dimen/element_margin"
                android:paddingBottom="@dimen/element_margin"
                android:text="Date"/>

            <TextView
                style="@style/HintText"
                android:id="@+id/transaction_info_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transaction_info_date"
                android:paddingStart="@dimen/page_margin"
                android:paddingEnd="@dimen/page_margin"
                android:paddingTop="@dimen/element_margin"
                android:paddingBottom="@dimen/element_margin"
                android:text="Status"/>

            <TextView
                style="@style/HintText"
                android:id="@+id/transaction_info_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transaction_info_status"
                android:paddingStart="@dimen/page_margin"
                android:paddingEnd="@dimen/page_margin"
                android:paddingTop="@dimen/element_margin"
                android:paddingBottom="@dimen/element_margin"
                android:text="From"/>

            <TextView
                style="@style/HintText"
                android:id="@+id/transaction_info_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transaction_info_from"
                android:paddingStart="@dimen/page_margin"
                android:paddingEnd="@dimen/page_margin"
                android:paddingTop="@dimen/element_margin"
                android:paddingBottom="@dimen/element_margin"
                android:text="To"/>

            <Button
                android:id="@+id/transaction_info_full"
                style="@style/PrimaryButtonRounded"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transaction_info_to"
                android:layout_margin="@dimen/page_margin"
                android:text="Full info"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>

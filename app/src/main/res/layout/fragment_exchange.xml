<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/exchange_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.blocksdecoded.dex.presentation.widgets.MainToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:mt_title="Exchange"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/exchange_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tabSelectedTextColor="@color/main_dark"
        app:tabTextColor="@color/light_hint">
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXCHANGE"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIMIT ORDER"/>
    </com.google.android.material.tabs.TabLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/exchange_input_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/exchange_tab_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/exchange_numpad"
        android:background="@color/white"
        android:padding="@dimen/page_margin"
        android:layout_margin="@dimen/page_margin">
        <TextView
            style="@style/LightText"
            android:id="@+id/exchange_amount_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="You send $0.00"/>

        <TextView
            style="@style/BoldText"
            android:id="@+id/exchange_amount_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/exchange_amount_hint"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/element_margin"
            android:textColor="@color/main_dark"
            android:textSize="17sp"
            android:text="0.0" />

        <Button
            style="@style/ButtonSmallGrey"
            android:id="@+id/exchange_amount_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/exchange_amount_input"
            app:layout_constraintBottom_toBottomOf="@+id/exchange_amount_input"
            app:layout_constraintRight_toLeftOf="@+id/exchange_middle_divider"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Max"/>

        <View
            android:id="@+id/exchange_middle_divider"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@+id/exchange_amount_input"
            android:layout_marginTop="@dimen/page_margin"
            android:background="@color/light_hint"/>

        <TextView
            style="@style/LightText"
            android:id="@+id/exchange_receive_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/page_margin"
            android:text="You receive $0.00"/>

        <TextView
            style="@style/BoldText"
            android:id="@+id/exchange_receive_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/exchange_receive_hint"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/element_margin"
            android:textColor="@color/main_dark"
            android:textSize="17sp"
            android:text="0.0" />

        <Spinner
            android:id="@+id/exchange_base_spinner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/exchange_amount_hint"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/exchange_middle_divider"
            app:layout_constraintBottom_toBottomOf="@+id/exchange_amount_input"
            android:entries="@array/placeholder_items"/>

        <Spinner
            android:id="@+id/exchange_quote_spinner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/exchange_receive_hint"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/exchange_middle_divider"
            app:layout_constraintBottom_toBottomOf="@+id/exchange_receive_input"
            android:entries="@array/placeholder_items"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/exchange_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/divider"
            app:layout_constraintBottom_toBottomOf="@+id/divider"
            app:layout_constraintLeft_toRightOf="@+id/exchange_middle_divider"
            app:layout_constraintRight_toRightOf="parent"
            app:backgroundTint="@color/white"
            android:src="@drawable/ic_switch"
            app:useCompatPadding="true"
            app:maxImageSize="14dp"
            app:fabCustomSize="30dp"
            app:elevation="4dp"
            android:clickable="true"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.blocksdecoded.dex.presentation.widgets.NumPadView
        android:id="@+id/exchange_numpad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/exchange_confirm"
        android:minHeight="200dp"
        android:layout_marginBottom="@dimen/page_margin" />

    <Button
        style="@style/PrimaryButton"
        android:id="@+id/exchange_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_btn_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAllCaps="true"
        android:text="Exchange"/>

</androidx.constraintlayout.widget.ConstraintLayout>

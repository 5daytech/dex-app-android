<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/element_margin">

    <com.blocksdecoded.dex.presentation.widgets.CoinIconImage
        android:id="@+id/item_coin_spinner_icon"
        android:layout_width="@dimen/coin_size"
        android:layout_height="@dimen/coin_size" />

    <TextView
        style="@style/SemiboldText"
        android:id="@+id/item_coin_spinner_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:paddingLeft="@dimen/element_margin"
        android:textSize="15sp"
        android:text="ETH"/>

</LinearLayout>